@using Newtonsoft.Json;
<script type="text/javascript">
    document.title="Fee Type";
    var content = @Html.Raw(JsonConvert.SerializeObject(TempData["FeeType"]));
    var mappingContent = @Html.Raw(JsonConvert.SerializeObject(TempData["FeeMapping"]));
    InitializeSelect();
</script>
<script src="~/Module_Script/fee/type.js"></script>
<script type="text/javascript">
    InitializeDDL();
</script>
<div class="esubmenu">
    <ul class="breadcrumb float-left">
        <li><a href="#">Home /</a></li>
        <li><a href="#">Pictures /</a></li>
        <li><a href="#">Summer 15 /</a></li>
        <li><a href="#" class="active">Summer 15</a></li>
    </ul>
    <div class="ever float-right">
        <span>Version : 0.0.1</span>
    </div>
</div>
<div class="pagebody">
    <div class="einrformbase">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active show" data-toggle="tab" href="#type">Fee Type</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" onclick="DetailTab();" data-toggle="tab" href="#details">Fee Details</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active show" id="type">
                <form name='FeeType' class="tab-pane active show" method="post" id="FeeType" noValidate onSubmit="return TypeSubmit(this);">
                    <div class="einrformbase">
                        <ul class="einrform">
                            <li>
                                <div class="text">
                                    <div class="form-group">
                                        <label for="feeName">Fee Name</label>
                                        <input type="text" class="form-control" isRequired="true" name="feeName" />
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="ddl">
                                    <div class="form-group">
                                        <label for="paymentType">Payment Type</label>
                                        <select class="chosen-select ddl" name="paymentType" isRequired="true">
                                            <option value="0">Select Payment Type</option>
                                        </select>
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="multiSelect">
                                    <div class="form-group">
                                        <label for="feePeriod">Month</label>
                                        <select class="chosen-select ddl" multiple name="feeMonth" id="feeMonth" isRequired="true">
                                            <option value="0">Select Month</option>
                                        </select>
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="text">
                                    <div class="form-group">
                                        <label for="feeSubmission">Fee Submission(Day of Month)</label>
                                        <input type="text" class="form-control" placeholder="Eg:10" isRequired="true" name="feeSubmission" />
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="text">
                                    <div class="form-group">
                                        <label for="feeRelaxDay">Fee Relaxation(No. of Days)</label>
                                        <input type="text" class="form-control" placeholder="Eg:5" isRequired="true" name="feeRelaxDay" />
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="text">
                                    <div class="form-group">
                                        <label for="feeDesc">Description</label>
                                        <input type="text" class="form-control" name="feeDesc" isRequired="true" />
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="multiSelect">
                                    <div class="form-group">
                                        <label for="isActive">Status</label>
                                        <select class="chosen-select ddl" name="isActive" isRequired="true">
                                            <option value="0">Select Status</option>
                                        </select>
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <input type="text" style="display:none" value="" name="typeid" />
                                <input type="text" style="display:none" value="10" name="reportId" />
                                <button type="submit" class="btn btn-info"><span class="inload hide"><i class="fa fa-spinner fa-spin"></i></span>Save</button>
                            </li>
                        </ul>
                    </div>
                </form>
                <div class="row cstdown clearfix">
                    <hr />
                    <div class="actionbse">
                        <div id="typeGrid" style="height:350px;" class="ag-theme-balham"></div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="details">
                <form name='FeeDetail' method="post" class="tab-pane active show" id="FeeDetail" noValidate onSubmit="return ShowFeeDetails(this);">
                    <div class="einrformbase">
                        <ul class="einrform">
                            <li>
                                <div class="multiSelect">
                                    <div class="form-group">
                                        <label for="academicYear">Academic Year</label>
                                        <select class="chosen-select ddl" name="academicYear" isRequired="true">
                                            <option value="0">Select Academic Year</option>
                                        </select>
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="multiSelect">
                                    <div class="form-group">
                                        <label for="courseId">Course</label>
                                        <select class="chosen-select ddl" name="courseId" isRequired="true">
                                            <option value="0">Select Course</option>
                                        </select>
                                        <span class="field-validation-error"></span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <button type="submit" class="btn btn-info"><span class="inload hide"><i class="fa fa-spinner fa-spin"></i></span>Show</button>
                            </li>
                        </ul>
                    </div>
                </form>
                <div class="row cstdown clearfix">
                    <hr />
                    <div class="actionbse">
                        <div id="feeDtlGrid" style="height:350px;" class="ag-theme-balham"></div>
                    </div>
                    <div class="text-center">
                        <form name='SaveDetails' method="post" id="SaveDetails" noValidate onSubmit="return GetRowData(this)">
                            <button type="submit" class="btn btn-info"><span class="inload hide"><i class="fa fa-spinner fa-spin"></i></span>Save Details</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<input type="text" style="display:none" value="A" name="flag" />
