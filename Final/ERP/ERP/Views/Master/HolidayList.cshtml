<div class="pagebody">
    <div class="einrformbase card pt-2 pl-2 pr-2">
        <div class="card-title">
            Holiday List Mapping
        </div>
        <div class="card-body">
            <form name='HolidayList' id="HolidayList" method="post" noValidate onSubmit="return handleSubmit(this);">
                <ul class="einrform">
                    <li>
                        <div class="text">
                            <div class="form-group">
                                <label for="academicYear">Academic Year</label>
                                <select class="chosen-select" id="ddlAcademicYear" isRequired="true" name="acyr">
                                    <option value="0">Select Academic Year</option>
                                </select>
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="text">
                            <div class="form-group">
                                <label for="academicYear">Holiday List</label>
                                <select class="chosen-select" id="ddlHoliday" isRequired="true" name="hldy">
                                    <option value="0">Select Holiday</option>
                                </select>
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="date">
                            <div class="form-group">
                                <label for="date">Date</label>
                                <input type="text" class="form-control chosen-date" isRequired="true" name="wfDate" />
                                <span class="field-validation-error"></span>
                            </div>
                            <span class="calendarbase"><img src="../../Images/calendar.png" /></span>
                        </div>
                    </li>
                    <li>
                        <div class="text">
                            <div class="form-group">
                                <label for="academicYear">Day</label>
                                <select class="chosen-select" id="ddlDay" isRequired="true" name="day">
                                    <option value="0">Select Day</option>
                                    <option value="mon">Monday</option>
                                    <option value="tue">Tuesday</option>
                                    <option value="wed">Wedenesday</option>
                                    <option value="thr">Thursday</option>
                                    <option value="fri">Friday</option>
                                    <option value="sat">Saturday</option>
                                    <option value="sun">Sunday</option>
                                </select>
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="text">
                            <div class="form-group">
                                <label for="academicYear">Restricted Holiday</label>
                                <select class="chosen-select" id="ddlres" isRequired="true" name="res">
                                    <option value="1">Yes</option>
                                    <option value="0" selected="selected">No</option>
                                </select>
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="ddl">
                            <div class="form-group">
                                <label for="active">Status</label>
                                <select class="chosen-select" id="ddlActive" isRequired="true" name="active">
                                    <option value="0">Select Status</option>
                                </select>
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <input type="text" style="display:none" value="" name="yearId" />
                        <input type="text" style="display:none" value="A" name="flag" />
                        <input type="text" style="display:none" value="1" name="reportId" />

                        <button type="submit" class="btn btn-info"><span class="inload hide"><i class="fa fa-spinner fa-spin"></i></span>Save</button>
                    </li>
                </ul>
            </form>
            <div class="actionbse">
                <div id="holidayGrid" style="height:350px;" class="ag-theme-balham"></div>
            </div>
        </div>
    </div>
</div>
