<div class="pagebody">
    <div class="einrformbase card pt-2 pl-2 pr-2">
        <div class="card-title">
            Course Management
        </div>
        <div class="card-body">
            <form name='CourseForm' id="CourseForm" method="post" onSubmit="return handleSubmit(this);">
                <ul class="einrform">
                    <li>
                        <div class="ddl">
                            <div class="form-group">
                                <label for="courseType">Course Type</label>
                                <select class="chosen-select" name="courseType" id="ddlCType">
                                    <option value="0">Select Course Type</option>
                                </select>
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="text">
                            <div class="form-group">
                                <label for="courseName">Course Name</label>
                                <input type="text" class="form-control" name="courseName" />
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="text">
                            <div class="form-group">
                                <label for="noOfSemester">No. Of Semester</label>
                                <input type="text" class="form-control" name="noOfSemester" />
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="ddl">
                            <div class="form-group">
                                <label for="active">Status</label>
                                <select class="chosen-select" name="active" id="ddlActive">
                                    <option value="0">Select Status</option>
                                </select>
                                <span class="field-validation-error"></span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <input type="text" style="display:none" value="" name="courserId" />
                        <input type="text" style="display:none" value="A" name="flag" />
                        <input type="text" style="display:none" value="2" name="reportId" />
                        <button type="submit" class="btn btn-info"><span class="inload hide"><i class="fa fa-spinner fa-spin"></i></span> Save</button>
                    </li>
                </ul>
            </form>
            <div class="actionbse">
                <div id="coruseGrid" style="height:350px;" class="ag-theme-balham"></div>
            </div>
        </div>
    </div>
</div>